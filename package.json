{
  "name": "bitbucket-extensions",
  "displayName": "Bitbucket extensions",
  "version": "1.1.0",
  "description": "Extensions to improve features that I personally find difficult to use in bitbucket.",
  "author": "Daisuke Kida",
  "scripts": {
    "dev": "plasmo dev & pnpm run scss",
    "scss": "typed-scss-modules src --nameFormat kebab --exportType default --watch",
    "build": "plasmo build",
    "package": "plasmo package",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss}'"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.12.0",
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "0.32.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typed-scss-modules": "^8.0.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://stash.sprocket3.systems/projects/*"
    ]
  }
}
